{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    /* 严格模式 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* 模块解析 */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["vite.config.ts", "vitest.config.ts"]
}
